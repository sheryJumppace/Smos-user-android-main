<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="model"
                type="com.smox.smoxuser.model.UpNext"/>
    </data>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      >
            <LinearLayout
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_margin"
                    android:layout_marginTop="@dimen/margin_s_fifteen">
                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/margin_s_fifteen"
                        android:layout_width="0dp" android:layout_height="wrap_content">
                    <ImageView
                            android:layout_width="@dimen/height_profile_image"
                            android:layout_height="@dimen/height_profile_image"
                            android:layout_alignParentEnd="true"
                            android:id="@+id/imgProfile"
                            app:imageUrl="@{model.image}"
                            app:placeHolder="@{@drawable/big_placeholder}"
                            app:isCircle="@{true}" android:layout_alignParentRight="true"/>

                </RelativeLayout>

                <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp" android:layout_height="wrap_content">
                    <TextView style="@style/TextNightStyle"
                              android:layout_width="match_parent"
                              android:id="@+id/txtBarberName"
                              android:text="@{model.name}"
                              android:textSize="@dimen/medium_font_size"

                    />
                    <TextView style="@style/TextNightStyle"
                              android:layout_width="match_parent"
                              android:layout_marginTop="@dimen/margin_s_fifteen"
                              android:textSize="@dimen/medium_font_size"
                              android:id="@+id/txtPhone" android:text="@{model.phone}"
                    />
                    <TextView style="@style/TextNightStyle"
                              android:layout_width="match_parent"
                              android:layout_marginTop="@dimen/margin_s_fifteen"
                              android:textSize="@dimen/medium_font_size"
                              android:id="@+id/txtServices" android:text="@{model.services}"
                    />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/default_margin">
                <TextView style="@style/TextCaptureStyle"
                          android:text="@string/official_time"
                />
                <TextView style="@style/TextNightStyle"
                          android:id="@+id/txtOfficialDate" android:text="@{model.officialTime}"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/default_margin">
                <TextView style="@style/TextCaptureStyle"
                          android:text="@string/wait_list"
                />
                <TextView style="@style/TextNightStyle"
                          android:id="@+id/txtWaitList" android:text="@{model.waitingList}"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/default_margin">
                <TextView style="@style/TextCaptureStyle"
                          android:text="@string/up_next"
                />
                <TextView style="@style/TextNightStyle"
                          android:id="@+id/txtUpNext" android:text="@{model.upNext}"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/default_margin">
                <TextView style="@style/TextCaptureStyle"
                          android:text="@string/last_client"
                />
                <TextView style="@style/TextNightStyle"
                          android:id="@+id/txtLastClient" android:text="@{model.lastClient}"
                />
            </LinearLayout>
        </LinearLayout>
</layout>