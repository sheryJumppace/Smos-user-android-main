<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/text_enter_your_card_details"
                android:textColor="@color/lightGray"
                android:textSize="@dimen/default_button_font_size" />

            <EditText
                android:id="@+id/et_card_holder_name"
                style="@style/EditStyle"
                android:layout_marginTop="@dimen/_15sdp"
                android:autofillHints="@string/text_card_holder_name"
                android:hint="@string/text_card_holder_name"
                android:inputType="textPersonName|textCapWords"
                android:singleLine="true" />


            <EditText
                android:id="@+id/et_card_number"
                style="@style/EditStyle"
                android:layout_marginTop="@dimen/_15sdp"
                android:autofillHints="@string/text_card_number"
                android:hint="@string/text_card_number"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:id="@+id/et_expiry_date"
                    style="@style/EditStyle"
                    android:layout_width="0dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:autofillHints="@string/text_mm_yy"
                    android:hint="@string/text_mm_yy"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="5"
                    tools:targetApi="o" />

                <EditText
                    android:id="@+id/et_cvv"
                    style="@style/EditStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/default_button_height"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:autofillHints="@string/text_cvv"
                    android:hint="@string/text_cvv"
                    android:importantForAutofill="no"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    tools:targetApi="o" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                style="@style/ButtonStyle"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/action_save"
                android:textAllCaps="true"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </LinearLayout>
</layout>