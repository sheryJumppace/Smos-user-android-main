<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="cartItem"
            type="com.smox.smoxuser.model.CartItems" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_3ssp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FEF5E0"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/app_name"
                    app:productUrl='@{cartItem.product.main_img}'
                     />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toStartOf="@+id/imgDelete"
                android:layout_toEndOf="@+id/card"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{cartItem.product.product_name}"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_15ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/card"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Brusher N-Toin" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toEndOf="@+id/card"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@{@string/format_price(cartItem.product.price)}"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintStart_toEndOf="@+id/card"
                app:layout_constraintTop_toBottomOf="@+id/txtProductName"
                tools:text="$60" />

            <TextView
                android:id="@+id/txtDiscPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toEndOf="@+id/card"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="@{@string/format_price(cartItem.product.discountedPrice)}"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toEndOf="@+id/txtPrice"
                app:layout_constraintTop_toBottomOf="@+id/txtProductName"
                tools:text="$60" />

            <TextView
                android:id="@+id/txtStockError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toEndOf="@+id/card"
                android:visibility="@{cartItem.stock_error? View.VISIBLE:View.GONE}"
                android:text="@{@string/stockAvail(cartItem.product.stock)}"
                android:textColor="@color/red"
                android:fontFamily="@font/lato_bold"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toEndOf="@+id/card"
                app:layout_constraintTop_toBottomOf="@+id/txtDiscPrice"
                tools:text="Stocks available: 50" />


            <LinearLayout
                android:id="@+id/llStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_toEndOf="@+id/card"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintStart_toEndOf="@+id/card"
                app:layout_constraintTop_toBottomOf="@+id/txtStockError">

                <ImageView
                    android:id="@+id/imgRemoveQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_remove_circle_outline_24"
                    app:tint="@color/light_black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:text="@{@string/format_quantity(cartItem.quantity)}"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/_14ssp"
                    tools:text="1" />

                <ImageView
                    android:id="@+id/imgAddQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_baseline_add_circle_outline_24"
                    app:tint="@color/light_black" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/com_facebook_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>