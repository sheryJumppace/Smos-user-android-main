<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.activity.barber.BankActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="@string/mobile_pay"
                app:toolbarId="@+id/toolbar">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/plant_detail_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="@dimen/default_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/default_margin">

                <TextView
                    android:id="@+id/txtTerms"
                    style="@style/TextStyle"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/margin_s_eight"
                    android:textAlignment="center" />

                <TextView
                    style="@style/TextStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:text="@string/legal_personal_information"
                    android:textAllCaps="true"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/medium_font_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_margin"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/txtFirstName"
                        style="@style/EditStyle"
                        android:layout_width="0dp"
                        android:layout_marginEnd="@dimen/default_margin_half"
                        android:layout_marginRight="@dimen/default_margin_half"
                        android:layout_weight="1"
                        android:autofillHints="@string/first_name"
                        android:hint="@string/first_name"
                        android:inputType="textPersonName"
                        tools:targetApi="o" />

                    <EditText
                        android:id="@+id/txtLastName"
                        style="@style/EditStyle"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/default_button_height"
                        android:layout_marginStart="@dimen/default_margin_half"
                        android:layout_marginLeft="@dimen/default_margin_half"
                        android:layout_weight="1"
                        android:autofillHints="@string/last_name"
                        android:hint="@string/last_name"
                        android:inputType="textPersonName"
                        tools:targetApi="o" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtEmail"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/email_address"
                    android:hint="@string/email_address"
                    android:inputType="textEmailAddress"
                    tools:targetApi="o" />

                <EditText
                    android:id="@+id/txtPhone"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/phone_number"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    tools:ignore="TextFields"
                    tools:targetApi="o" />

                <TextView
                    android:id="@+id/txtBirthday"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/phone_number"
                    android:gravity="center_vertical"
                    android:hint="@string/date_of_birth"
                    tools:ignore="TextFields"
                    tools:targetApi="o" />

                <EditText
                    android:id="@+id/txtLastSSN"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/phone_number"
                    android:hint="@string/ssn_last_4"
                    android:inputType="number"
                    android:maxLength="4"
                    tools:ignore="TextFields"
                    tools:targetApi="o" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_s_ten"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextStyle"
                        android:text="@string/address"
                        android:textAllCaps="true"
                        android:textColor="@color/gold"
                        android:textSize="@dimen/medium_font_size" />

                    <TextView
                        style="@style/TextStyle"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/default_margin"
                        android:padding="@dimen/default_margin_half"
                        android:text="@string/home_address_not_your_business_address"
                        android:textColor="@color/lightGray"
                        android:textSize="@dimen/small_font_size" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txtAddressLine1"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/phone_number"
                    android:hint="@string/address_line_1"
                    android:inputType="textPostalAddress"
                    tools:ignore="TextFields"
                    tools:targetApi="o" />

                <EditText
                    android:id="@+id/txtAddressLine2"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/phone_number"
                    android:hint="@string/address_line_2"
                    android:inputType="textPostalAddress"
                    tools:ignore="TextFields"
                    tools:targetApi="o" />

                <EditText
                    android:id="@+id/txtCity"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/phone_number"
                    android:hint="@string/city"
                    android:inputType="textPostalAddress"
                    tools:ignore="TextFields"
                    tools:targetApi="o" />

                <TextView
                    android:id="@+id/txtState"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/phone_number"
                    android:gravity="center_vertical"
                    android:hint="@string/state"
                    android:inputType="textPostalAddress"
                    tools:ignore="TextFields"
                    tools:targetApi="o" />

                <EditText
                    android:id="@+id/txtZip"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/phone_number"
                    android:hint="@string/zip"
                    android:inputType="number"
                    tools:ignore="TextFields"
                    tools:targetApi="o" />

                <EditText
                    android:id="@+id/txtCountry"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/phone_number"
                    android:enabled="false"
                    android:text="@string/united_states"
                    tools:ignore="TextFields"
                    tools:targetApi="o" />

                <TextView
                    style="@style/TextStyle"
                    android:layout_marginTop="@dimen/margin_s_ten"
                    android:text="@string/business_website"
                    android:textAllCaps="true"
                    android:textColor="@color/gold"
                    android:textSize="@dimen/medium_font_size" />

                <EditText
                    android:id="@+id/txtWeb"
                    style="@style/EditStyle"
                    android:layout_marginTop="@dimen/default_margin"
                    android:autofillHints="@string/phone_number"
                    android:hint="@string/https_example_com"
                    android:inputType="textUri"
                    tools:ignore="TextFields"
                    tools:targetApi="o" />

                <TextView
                    style="@style/TextStyle"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="@dimen/default_margin_half"
                    android:text="@string/website_comment"
                    android:textColor="@color/lightGray"
                    android:textSize="@dimen/small_font_size" />

                <RelativeLayout
                    android:id="@+id/btnMobilePay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextStyle"
                            android:layout_marginTop="@dimen/margin_s_ten"
                            android:text="@string/your_card"
                            android:textAllCaps="true"
                            android:textColor="@color/gold"
                            android:textSize="@dimen/medium_font_size" />

                        <TextView
                            android:id="@+id/txtMobilePay"
                            style="@style/TextStyle"
                            android:paddingLeft="@dimen/default_margin"
                            android:paddingTop="@dimen/default_margin"
                            android:paddingRight="@dimen/default_margin"
                            android:text="Add your debit card"
                            android:textColor="@color/lightGray"
                            android:textSize="@dimen/small_font_size" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/margin_s_fifteen"
                        android:layout_height="@dimen/margin_s_fifteen"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        app:srcCompat="@drawable/ic_back_arrow" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btnSave"
                    style="@style/ButtonStyle"
                    android:layout_marginTop="@dimen/margin_s_fifteen"
                    android:layout_marginBottom="@dimen/margin_s_fifteen"
                    android:text="@string/action_save"
                    android:textAllCaps="true" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>