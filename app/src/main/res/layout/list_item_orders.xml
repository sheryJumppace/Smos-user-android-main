<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="orders"
            type="com.smox.smoxuser.model.Orders" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/bg_event"
        android:onClick="@{clickListener}"
        android:orientation="vertical"
        android:padding="@dimen/default_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProductImage"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:scaleType="centerCrop"
                app:productUrl='@{orders.product_image}' />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProductName"
                    style="@style/TextStyle"
                    android:text="@{orders.product_title}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/lblUserType"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_weight="0.30"
                        android:text="@{orders.customer_name.toString().length() > 0 ? @string/order_user_buyer : @string/order_user_seller}"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtUserName"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_weight="0.70"
                        android:gravity="right"
                        android:text="@{orders.customer_name.toString().length() > 0 ? orders.customer_name : orders.barber_name}"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/lblProductPrice"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_weight="0.30"
                        android:text="@string/order_price"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtProductPrice"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_weight="0.70"
                        android:gravity="right"
                        android:text="@{String.valueOf(orders.quantity+` x `+orders.product_price)}"
                        android:textColor="@color/white" />
                    <!--android:text="@{String.valueOf(orders.product_price)}"/>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/lblQuantity"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_weight="0.30"
                        android:text="@string/order_quantity"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtQuantity"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:layout_weight="0.70"
                        android:gravity="right"
                        android:text="@{String.valueOf(orders.quantity)}"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/lblProductShippingCharges"
                    style="@style/TextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.40"
                    android:text="@string/shipping_charges"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtProductShippingCharges"
                    style="@style/TextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.60"
                    android:gravity="right"
                    android:text="@{String.valueOf(orders.shipping_charges)}"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/lblProductTax"
                    style="@style/TextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:text="@string/tax"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtProductTax"
                    style="@style/TextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    android:gravity="right"
                    android:text="@{String.valueOf(orders.quantity+` x `+orders.tax)}"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/lblProductTotalPrice"
                    style="@style/TextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.30"
                    android:text="@string/order_total_price"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtProductTotalPrice"
                    style="@style/TextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.70"
                    android:gravity="right"
                    android:text="@{String.valueOf(orders.total_amount / 100)}"
                    android:textColor="@color/white" />
                <!--android:text="@{String.valueOf(orders.product_price * orders.quantity)}"/>-->
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtProductStatus"
            style="@style/TextStyle"
            android:text="@{orders.status == 0 ? @string/order_not_delivered : @string/order_delivered}"
            android:textColor="@color/white"
            android:textSize="@dimen/_17ssp" />

    </LinearLayout>

</layout>