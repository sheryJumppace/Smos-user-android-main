<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/black">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerHallDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:visibility="visible" />

    <com.rd.PageIndicatorView
        android:id="@+id/pageIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:piv_animationType="swap"
        app:piv_radius="@dimen/_4sdp"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/viewpagerHallDetails"
        app:piv_viewPager="@id/viewpagerHallDetails"
        app:piv_selectedColor="@color/colorPrimaryDark"
        app:piv_unselectedColor="@color/dark_gray"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/_15sdp" />


    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/back_icon"
        android:layout_margin="15dp"/>

</RelativeLayout>