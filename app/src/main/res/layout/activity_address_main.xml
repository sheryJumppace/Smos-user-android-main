<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.activity.product.ProductDetailActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.NoActionBar.PopupOverlay"
                app:title="@string/check_out"/>

        </com.google.android.material.appbar.AppBarLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!--<ProgressBar
                android:id="@+id/product_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:layout_alignParentTop="true"/>-->


           <!-- <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/_4sdp"
                android:layout_above="@+id/lnrProductDetail">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/list_item_address"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/_4sdp"/>

                <TextView style="@style/TextStyle"
                    android:id="@+id/txtNoAddress" android:text="@string/no_address"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"/>
            </RelativeLayout>

            <!--</LinearLayout>-->

            <LinearLayout
                android:id="@+id/lnrProductDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_product_detail"
                android:layout_marginLeft="@dimen/margin_s_fifteen"
                android:layout_marginRight="@dimen/margin_s_fifteen"
                android:layout_marginBottom="@dimen/_7sdp"
                android:padding="@dimen/_5sdp"
                android:layout_above="@+id/btnAddressAddCard">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_3sdp">
                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="@string/product_name"
                        android:layout_weight="0.40"
                        />
                    <TextView
                        android:id="@+id/txtAddrProductName"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="0.60"
                        android:gravity="right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_4sdp">
                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="@string/product_quantity"
                        android:layout_weight="0.40"
                        />
                    <TextView
                        android:id="@+id/txtAddrProductQuantity"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="0.60"
                        android:gravity="right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_4sdp">
                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="@string/product_price"
                        android:layout_weight="0.40"
                        />
                    <TextView
                        android:id="@+id/txtAddrProductPrice"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="0.60"
                        android:gravity="right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrShippingCharges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_4sdp">
                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="@string/shipping_charges"
                        android:layout_weight="0.40"
                        />
                    <TextView
                        android:id="@+id/txtProductShipCharges"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="0.60"
                        android:gravity="right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrTax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_4sdp">
                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="@string/tax"
                        android:layout_weight="0.40"
                        />
                    <TextView
                        android:id="@+id/txtProductTax"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="0.60"
                        android:gravity="right"
                        />
                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/_4sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/_4sdp">
                    <TextView
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:text="@string/total"
                        android:layout_weight="0.40"
                        />
                    <TextView
                        android:id="@+id/txtAddrProductTotal"
                        style="@style/TextStyle"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_weight="0.60"
                        android:gravity="right"
                        />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnAddressAddCard"
                android:layout_marginLeft="@dimen/margin_s_fifteen"
                android:layout_marginRight="@dimen/margin_s_fifteen"
                android:textAllCaps="true"
                android:text="@string/add_card"
                style="@style/ButtonStyle"
                android:visibility="gone"
                android:layout_above="@+id/btnAddressCheckOut"
                android:layout_marginBottom="@dimen/_7sdp"/>

            <Button
                android:id="@+id/btnAddressCheckOut"
                android:layout_marginLeft="@dimen/margin_s_fifteen"
                android:layout_marginRight="@dimen/margin_s_fifteen"
                android:textAllCaps="true"
                android:text="@string/check_out"
                style="@style/ButtonStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/_5sdp"/>

<!--            <ProgressBar-->
<!--                android:id="@+id/productProgressBar"-->
<!--                style="?android:attr/progressBarStyleHorizontal"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentTop="true"-->
<!--                android:visibility="visible"-->
<!--                android:indeterminate="true"-->
<!--                android:indeterminateTintMode="src_atop"-->
<!--                android:indeterminateTint="@color/white"/>-->

        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
