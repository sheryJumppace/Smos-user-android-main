<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_60sdp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rvItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/lightGray" />

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ordered_yellow" />

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rvItem"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_8sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Order Placed"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                style="@style/textcolorWhiteGrey"/>

            <TextView
                android:id="@+id/txtStatusDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="June 06,2022"
                android:layout_marginStart="@dimen/_10sdp"
                style="@style/textcolorWhiteGrey"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/txtStatusMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Your order has been placed"
            android:layout_marginStart="@dimen/_10sdp"
            style="@style/textcolorWhiteGrey"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>