<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="product"
            type="com.smox.smoxuser.model.Product" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{clickListener}"
        android:padding="@dimen/default_margin">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/height_profile_image_small"
            android:layout_height="@dimen/height_profile_image_small"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:scaleType="fitCenter"
            app:productListUrl='@{product.image}'
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/default_margin"
            android:layout_marginLeft="@dimen/default_margin"
            android:layout_toEndOf="@+id/imgProfile"
            android:layout_toRightOf="@+id/imgProfile"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_7sdp"
            tools:ignore="RtlHardcoded">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtName"
                    style="@style/TextStyle"
                    android:text="@{product.title.toUpperCase()}"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/btnDelete"
                    android:layout_marginRight="@dimen/_2sdp"/>

                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="@dimen/margin_s_fifteen"
                    android:layout_height="@dimen/margin_s_twenty"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:onClick="@{clickListener}"
                    android:src="@drawable/dustbin" />

            </RelativeLayout>

            <TextView
                android:id="@+id/txtDescription"
                style="@style/TextStyle"
                android:text="@{product.productDescription}"
                android:textColor="@color/lightGray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblPrice"
                    style="@style/TextStyle"
                    android:text="@string/price"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/txtPrice"
                    android:layout_marginRight="@dimen/_2sdp"/>
                <TextView
                    android:id="@+id/txtPrice"
                    style="@style/TextStyle"
                    android:text="@{@string/format_price(product.price)}"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblShippingCharges"
                    style="@style/TextStyle"
                    android:text="@string/shipping_charges"
                    android:textSize="@dimen/small_font_size"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/txtShippingCharges"
                    android:layout_marginRight="@dimen/_2sdp"/>
                <TextView
                    android:id="@+id/txtShippingCharges"
                    style="@style/TextStyle"
                    android:text="@{@string/format_price(product.shippingCharges)}"
                    android:textSize="@dimen/small_font_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lblTax"
                    style="@style/TextStyle"
                    android:text="@string/tax"
                    android:textSize="@dimen/small_font_size"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/txtTax"
                    android:layout_marginRight="@dimen/_2sdp"/>
                <TextView
                    android:id="@+id/txtTax"
                    style="@style/TextStyle"
                    android:text="@{@string/format_price(product.tax)}"
                    android:textSize="@dimen/small_font_size"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>

