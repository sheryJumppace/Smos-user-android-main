<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txtNext">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/mainBackground"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp">

                        <ImageView
                            android:id="@+id/imgBack"
                            style="@style/backArrow"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/_5sdp" />

                        <TextView
                            android:id="@+id/txtTitleBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="8dp"
                            android:layout_toEndOf="@+id/imgBack"
                            android:gravity="center"
                            android:text="Book Appointment"
                            style="@style/textcolor"
                            android:textSize="18sp" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgBook"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:src="@drawable/ic_book_app" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:background="#FFBB0C"
                                android:layout_toStartOf="@+id/imgPay"
                                android:layout_toEndOf="@+id/imgBook"/>

                            <ImageView
                                android:id="@+id/imgPay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_payment_app" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:background="#FFBB0C"
                                android:layout_toEndOf="@+id/imgPay"
                                android:layout_toStartOf="@+id/imgFinished"/>

                            <ImageView
                                android:id="@+id/imgFinished"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:src="@drawable/ic_finished_app" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgBook"
                                android:gravity="center"
                                android:layout_weight=".3"
                                android:text="Book Appointment"
                                style="@style/textcolor"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgPayment"
                                android:text="Payment"
                                android:gravity="center"
                                android:layout_weight=".3"
                                style="@style/textcolor"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgFinished"
                                android:text="Finished"
                                android:gravity="center"
                                android:layout_weight=".35"
                                style="@style/textcolor" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.google.android.material.appbar.AppBarLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp">

                        <TextView
                            android:id="@+id/txtServiceHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:text="Service"
                            style="@style/textcolor"
                            android:textSize="@dimen/_16sdp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvServiceList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtServiceHeading"
                            tools:itemCount="2"
                            tools:listitem="@layout/service_type_item_row" />

                        <LinearLayout
                            android:id="@+id/llSelectedSlot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rvServiceList"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtTimeSlot"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:layout_weight="1"
                                android:background="@drawable/bg_slot_selected"
                                android:drawableTint="@color/white"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:text="08:30 am - 09:00 am"
                                android:textColor="@color/white"
                                app:drawableStartCompat="@drawable/ic_baseline_access_time_filled_24" />

                            <TextView
                                android:id="@+id/txtDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_weight="1"
                                android:background="@drawable/round_corner_selected"
                                android:gravity="center"
                                android:padding="@dimen/_8sdp"
                                android:text="Oct 24th , 2021"
                                android:textColor="@color/white"
                                app:drawableStartCompat="@drawable/ic_baseline_calendar_today_24" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llSelectedSlot"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:text="Total pay"
                            style="@style/textcolor"
                            android:textSize="@dimen/_16sdp" />

                        <TextView
                            android:id="@+id/txtTotalPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llSelectedSlot"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:text="$20.00"
                            style="@style/textcolor"
                            android:textSize="@dimen/_16sdp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"
                    android:layout_marginEnd="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp">

                        <TextView
                            style="@style/textcolor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:text="Select Card"
                            android:textSize="@dimen/_16sdp" />

                        <ImageView
                            android:id="@+id/imgAddCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_add_card" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imgAddCard"
                            android:visibility="visible"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_row_add_card" />

                        <TextView
                            android:id="@+id/txtNoCardFound"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginEnd="@dimen/_6sdp"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_marginBottom="@dimen/_6sdp"
                            android:text="No Cards added, please add new card"
                            android:textColor="@color/dark_gray"
                            android:layout_below="@+id/imgAddCard"
                            android:textSize="@dimen/_12sdp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:id="@+id/txtNext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#0068AF"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
