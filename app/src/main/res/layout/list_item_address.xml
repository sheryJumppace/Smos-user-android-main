<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />
        <variable
            name="address"
            type="com.smox.smoxuser.model.Address" />
    </data>

    <RelativeLayout
        android:id="@+id/relAddressItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_event"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_margin"
        android:onClick="@{clickListener}">

        <LinearLayout
            android:id="@+id/lnrItemOperate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgAddressEdit"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_edit"
                    android:layout_toLeftOf="@+id/imgAddressDelete"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:onClick="@{clickListener}"/>
                <ImageView
                    android:id="@+id/imgAddressDelete"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/dustbin"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:onClick="@{clickListener}"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgAddressSet"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@{address.isSelected ? @drawable/icon_circle_check :@drawable/icon_circle_uncheck}"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:onClick="@{clickListener}"/>
                <!--android:src="@{service.isSelected ? @drawable/icon_circle_check :@drawable/icon_circle_uncheck}"/>-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/lnrItemOperate">
            <TextView
                    style="@style/TextStyle"
                    android:id="@+id/txtCustomerName"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@{address.customer_name}"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_alignParentLeft="true" />

            <TextView
                style="@style/TextStyle"
                android:id="@+id/txtAddress"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@{address.customer_address}"
                android:layout_marginTop="@dimen/_5sdp" />
            <TextView
                style="@style/TextStyle"
                android:id="@+id/txtPostalCode"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@{address.postal_code}"
                android:layout_marginTop="@dimen/_5sdp"
                />
        </LinearLayout>
    </RelativeLayout>

</layout>