<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="item"
            type="com.smox.smoxuser.model.OpenDay" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_s_ten"
        tools:ignore="RtlHardcoded">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked='@{item.isClosed ? false : true}'
             />

        <TextView
            android:id="@+id/txtName"
            style="@style/TextStyle"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_s_ten"
            android:text="@{item.day}"
            android:textSize="@dimen/medium_font_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/default_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtStartTime"
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:onClick="@{clickListener}"
                    android:text="@{item.startTime}"
                    android:textAllCaps="true"
                    tools:targetApi="o" />

                <TextView
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:text="-"
                    android:textSize="@dimen/medium_font_size"
                    tools:targetApi="o" />

                <TextView
                    android:id="@+id/txtEndTime"
                    style="@style/TextStyle"
                    android:layout_width="wrap_content"
                    android:onClick="@{clickListener}"
                    android:text="@{item.endTime}"
                    android:textAllCaps="true"
                    tools:targetApi="o" />

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</layout>

